<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listener.init</listener-class>
    </listener>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>controller.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>datagrid</servlet-name>
        <servlet-class>controller.datagrid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productSetup</servlet-name>
        <servlet-class>controller.productSetup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>datagrid</servlet-name>
        <url-pattern>/admin/datagrid.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productSetup</servlet-name>
        <url-pattern>/productSetup.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/webdb</description>
        <res-ref-name>webdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
